# IMPORTANT: Actual environment file should be placed in the external keys directory (/home/simrob1729/keys/.env)
# This file serves as a template for the required environment variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Google API
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_credentials_json
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# LLM API Configuration
# Choose provider: 'openai' or 'anthropic'
LLM_PROVIDER=anthropic

# For OpenAI
OPENAI_API_KEY=your_openai_api_key

# For Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Database Configuration
SQLITE_DB_PATH=/home/simrob1729/sand-finance/data/sand_finance.db

# Logging
LOG_LEVEL=info